<?xml version="1.0" encoding="UTF-8"?>
<persistence version="3.0" 
             xmlns="https://jakarta.ee/xml/ns/persistence" 
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence 
                                 https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd">
    
    <persistence-unit name="RuwanaPU" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        
        <!-- Catalog Entities -->
        <class>com.dwi.ruwana.model.catalogo.CatGenero</class>
        <class>com.dwi.ruwana.model.catalogo.CatEstadoCivil</class>
        <class>com.dwi.ruwana.model.catalogo.CatTipoDocumento</class>
        <class>com.dwi.ruwana.model.catalogo.CatGradoInstruccion</class>
        <class>com.dwi.ruwana.model.catalogo.CatCentroEstudios</class>
        
        <!-- Main Entities -->
        <class>com.dwi.ruwana.model.Usuario</class>
        <class>com.dwi.ruwana.model.Voluntario</class>
        <class>com.dwi.ruwana.model.Organizacion</class>
        <class>com.dwi.ruwana.model.Evento</class>
        <class>com.dwi.ruwana.model.Inscripcion</class>
        <class>com.dwi.ruwana.model.Donacion</class>
        <class>com.dwi.ruwana.model.Certificacion</class>
        <class>com.dwi.ruwana.model.Notificacion</class>
        
        <properties>
            <!-- MySQL Connection Properties -->
            <property name="jakarta.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/ruwana_db?useSSL=false&amp;serverTimezone=UTC&amp;allowPublicKeyRetrieval=true"/>
            <property name="jakarta.persistence.jdbc.user" value="root"/>
            <property name="jakarta.persistence.jdbc.password" value=""/>
            
            <!-- Hibernate Properties -->
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQL8Dialect"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
            <property name="hibernate.use_sql_comments" value="true"/>
            
            <!-- Schema Management -->
            <!-- validate: validate schema, makes no changes to database -->
            <!-- update: update schema if necessary -->
            <!-- create: creates schema, destroying previous data -->
            <!-- create-drop: drop schema when SessionFactory is closed -->
            <!-- none: disable schema validation/generation -->
            <property name="hibernate.hbm2ddl.auto" value="none"/>
            
            <!-- Connection Pool Settings (C3P0) -->
            <property name="hibernate.c3p0.min_size" value="5"/>
            <property name="hibernate.c3p0.max_size" value="20"/>
            <property name="hibernate.c3p0.timeout" value="300"/>
            <property name="hibernate.c3p0.max_statements" value="50"/>
            <property name="hibernate.c3p0.idle_test_period" value="3000"/>
            
            <!-- Enable Hibernate's automatic session context management -->
            <property name="hibernate.current_session_context_class" value="thread"/>
            
            <!-- Logging -->
            <property name="hibernate.generate_statistics" value="false"/>
        </properties>
    </persistence-unit>
</persistence>
